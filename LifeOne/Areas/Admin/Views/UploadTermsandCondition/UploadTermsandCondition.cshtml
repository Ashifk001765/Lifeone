@model LifeOne.Models.AdminManagement.AEntity.AdminTermsCondition
@using LifeOne.Models.Manager;
@{
    ViewBag.Title = "UploadTermsandCondition";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/summernote/summernote/summernote-bs4.min.css" rel="stylesheet" />

@{
    string msg = (string)TempData["msg"];
    string code = Convert.ToString(TempData["code"]);
    if (msg != null)
    {
        if (code.Equals("1"))
        {
            <div class="alert alert-success m-t-30" id="divsuccess">
                <i class="mdi mdi-checkbox-multiple-marked-outline"></i> <strong>Success!</strong> @msg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>
        }
        else
        {
            <div class="alert alert-success m-t-30" id="divUpdate">
                <i class="mdi mdi-checkbox-multiple-marked-outline"></i>  <strong>Error!</strong> @msg
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
            </div>
        }
    }
}
<div class="container-fluid">
    <div class="row page-titles">
        <div class="ptitle">
            <h4 class="mb-1 mt-0">Upload Terms & Condition</h4>
        </div>
        <div class="pbutton">
            <div class="right text-right">
                @if (PermissionManager.IsActionPermit("Upload Termsand Condition", ViewOptions.FormSave))
                {
                    <a href="/UploadTermsandConditionList" id="btnAdd" class="btn btn-success btn-sm">
                        View List
                    </a>
                }
            </div>
        </div>
    </div>

    @using (Html.BeginForm("UploadTermsandConditionSave", "UploadTermsandCondition", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
    {
        <div id="no-more-tables">
            <div class="row">
                <div class="col-lg-12">
                    <div class="box">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="alert alert-warning" style="color:#727272 !important">
                                        <div class="row">
                                            <div class="card-body" id="TextBoxDis">
                                                @Html.TextAreaFor(m => m.TermsandCondition, new { @class = "form-control", @id = "summernote" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12 col-md-4">
                                                <div class="form-group">
                                                    <label style="display:block;"></label>
                                                    @if (string.IsNullOrEmpty(Model.Pk_Id) || Model.Pk_Id == "0")
                                                    {
                                                        <input type="submit" class="btn btn-success " style="margin-top:1.5em;" value="Save" id="Btnsave">
                                                    }
                                                    else
                                                    {
                                                        <input type="submit" class="btn btn-danger " style="margin-top:1.5em;" value="Update" id="Btnsave">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            @Html.HiddenFor(m => m.Pk_Id)
        </div>
    }
</div>

<script src="~/Content/assests/js/jquery.min.js"></script>
<script src="~/Content/summernote/summernote/summernote-bs4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            height: 300, // Set editor height
            minHeight: null, // Set minimum height of editor
            maxHeight: null, // Set maximum height of editor
            focus: true // Set focus to editable area after initializing summernote
        });
    });
</script>
